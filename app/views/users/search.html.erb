
<div class='search-area'>
	<h3>Search Friend</h3>
	<%= form_tag friendship_search_path,remote: true,method: :get do %>
		<div class="form-group row">
			<div class="col-sm-9">
				<%= text_field_tag :friend,params[:friend],placeholder: "Search Friend",autofocus: true, class: "form-control form-control-lg" %>
			</div>
			<div class="col-sm-3">
				<%= button_tag type: :submit ,class:"btn btn-success" do %>
					<%= 'Search' %>
				<% end %>
			</div>
		</div>
		<% end %>
</div>
<div>
	<%= render 'users/result' %>
</div>
