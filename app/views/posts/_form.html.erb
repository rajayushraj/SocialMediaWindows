<%= form_with(model: @post, local: true) do |f| %>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
  </div>
  <div class="field">
  	<%= f.select :status, ["Public", "Private", "Friend"] %>
  </div>

  <div class="actions">
    <%= f.submit "submit" %>
  </div>
<% end %>